<%= render 'layouts/top_bar' %>

<div class="container top-buffer d-flex justify-content-center">
  <div class="col-9">

    <%= form_with(scope: 'validate', url: "/validate", local: true) do |form| %>

      <div class="form-group row">

        <%= form.label t('.country_label'), class: "col-3 col-form-label" %>
        <%= form.select(:country, options_for_select(@country_list), {class: "col-6 form-control custom-select"}) %>

      </div>

      <div class="form-group row">

        <%= form.label :tax_id, t('.tax_id_labbel'), class: "col-3 col-form-label" %>
        <%= form.text_field :tax_id, class: "col-6 form-control", placeholder: t('.tax_id_placeholder') %>

      </div>

      <%= form.submit t('.validate_button'), class: "btn button_style" %>

    <% end %>

    <%= render 'layouts/messages' %>

  </div>
</div>
