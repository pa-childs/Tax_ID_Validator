<div class="jumbotron jumbotron-fluid jumbocolor">
  <div class="container d-flex justify-content-center">
    <h1 class="display-4">TAX ID VALIDATOR</h1>
  </div>
</div>

<div class="container d-flex justify-content-center">
  <%= form_with do %>

    <div class="form-group row">
      <label for="country">Country</label>
      <select class="form-control custom-select" id="country">

        <% @countries.each do |country| %>

          <option> <%= country[:name] %> </option>

        <% end %>

      </select>
    </div>

    <div class="form-group row">
      <label for="tax_id">Tax ID</label>
      <input type="text" class="form-control" id="tax_id" placeholder="Enter Tax ID">
    </div>

    <button type="submit" class="btn button">Validate</button>

  <% end %>
</div>
